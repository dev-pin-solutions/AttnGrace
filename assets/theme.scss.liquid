.product-gallery--figure {
  position: relative;
  width: 100%;
  margin: 0;

  body:not(.user-is-tabbing) & {
    outline: none;
  }

  &.product-media-fade {
    opacity: 0.5;
  }

  img {
    @extend %rimg-img-relative;
    display: block;
    width: 100%;
    height: auto;
    opacity: 1;
    transition: 500ms opacity;
    border-radius: 0 25px 25px 0;
  }

  video {
    display: block;
    max-width: 100%;
  }

  .product-gallery--media-wrapper {
    position: relative;
  }

  &[data-media-type="model"] .product-gallery--media-wrapper {
    height: 0;
    padding-bottom: 100%;

    model-viewer {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  }

  // Hides native video controls until Plyr overlay is added, to avoid pop-in
  &[data-media-type="video"] .product-gallery--media-wrapper {
    > video {
      visibility: hidden;
    }
  }

  &[data-media-type="external_video"] .product-gallery--media-wrapper {
    width: 100%;
    height: 0;
    padding-bottom: 56.25%;

    > iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  }

  .product-slideshow & {
    @include transition(opacity 250ms);
    left: 0 !important; // Forces slides to crossfade without sliding
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    height: 80vh;
    margin: 0;
    opacity: 0;
    visibility: hidden;

    img {
      width: auto;
      height: auto;
      max-width: 100%;
      max-height: 100%;
    }

    .product-gallery--media-wrapper {
      display: flex;
      align-items: center;
      flex-shrink: 1;
      justify-content: center;
      height: 100%;
    }

    &[data-media-type="model"] .product-gallery--media-wrapper {
      // In this context, models will display at the aspect ratio of the container
      width: 100%;
      height: 100%;
      padding-bottom: 0;
    }

    &[data-media-type="video"] .product-gallery--media-wrapper {
      width: 100%;
    }

    &[data-media-type="external_video"] .product-gallery--media-wrapper {
      height: 0;
      margin-top: auto;
      margin-bottom: auto;
    }

    .plyr {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
    }

    .plyr__video-wrapper {
      height: 100%;
    }

    video {
      height: 100%;
    }

    &:not(.is-selected) {
      // Override a plyr style that otherwise allows this control
      // to get focus on hidden slides
      .flickity-viewport & .plyr__control--overlaid {
        visibility: hidden;
      }
    }

    &.is-selected {
      z-index: 1;
      opacity: 1;
      visibility: visible;
    }
  }
}

