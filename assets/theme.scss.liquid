// checkbox

.checkbox-field {
  position: relative;
  height: 36px;

  input {
    position: absolute;
    opacity: 0;
    cursor: pointer;
    height: 0;
    width: 0;
  }

  label {
    position: relative;
    cursor: pointer;
    cursor: pointer;
    height: 36px;
    width: 34px;
    display: block;
    margin: auto;

    &::before {
      content: "";
      position: absolute;
      top: 0;
      height: 36px;
      width: 34px;
      border: 2px solid $color-light-black;
      border-radius: 7px;
    }

    &::after {
      content: "";
      display: none;
      position: absolute;
      left: 10px;
      top: 8px;
      width: 8px;
      height: 17px;
      border: solid white;
      border-width: 0 3px 3px 0;
      -webkit-transform: rotate(35deg);
      -ms-transform: rotate(35deg);
      transform: rotate(35deg);
    }
  }

  input:checked ~ label {
    &::before {
      background-color: $color-orange;
      border-color: $color-orange;
    }

    &::after {
      display: inline-block;
    }
  }
}


