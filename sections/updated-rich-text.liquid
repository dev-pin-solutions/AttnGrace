{%- capture section_classes -%}
  home-section
  home-section-height-{{ section.settings.section_height }}
  home-section-rte-{{ section.settings.background_color }}
{%- endcapture -%}

<section class="{{ section_classes | strip_newlines }} updated-rich-text-section {{ section.settings.section_class }}" data-home-section>
  {% if section.settings.heading != blank or section.settings.content != blank %}
    <div class="home-section-rte-wrapper" data-home-section-content>
      {% if section.settings.heading != blank %}
        <h1 class="home-section-rte-title">{{ section.settings.heading | escape }}</h1>
      {% endif %}

      {% if section.settings.content != blank %}
        <div class="rte">{{ section.settings.content }}</div>
      {% endif %}
      {% if section.settings.link_url != blank %}
        <a href="{{ section.settings.link_url }}" class="home-section-rte-link global-btn">
          {{ section.settings.link_text }}
        </a>
      {% endif %}
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Updated Rich Text",
  "class": "home-featured-content",
  "settings": [
    {
      "type": "select",
      "id": "section_height",
      "label": "Section height",
      "default": "medium",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "fullscreen",
          "label": "Fullscreen"
        }
      ]
    },
    {
      "type": "text",
      "id": "section_class",
      "label": "Section Custom Class"
    },
    {
      "type": "select",
      "id": "background_color",
      "label": "Background color",
      "default": "contrast",
      "options": [
        {
          "label": "None",
          "value": "none"
        },
        {
          "label": "White",
          "value": "white"
        },
        {
          "label": "Contrast",
          "value": "contrast"
        }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your featured content"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Updated Rich Text"
    }
  ]
}

{% endschema %}