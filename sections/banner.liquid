{%- assign desktop-image = section.settings.desktop_image -%}
{%- assign mobile-image = section.settings.mobile_image -%}
<div class="our-mission banner-our-mission"
     style=" {% if section.settings.bg_color != blank %} background-color:{{ section.settings.bg_color }};{% endif %}">
  <div>
    <div class="feature-row">
      <div class="feature-row-item image-wrapper image-wrapper-desktop">
        {%
                include 'rimg-home'
        img: desktop-image,
                size: '2048x2048',
                lazy: true, %}
      </div>
      <div class="feature-row-item image-wrapper image-wrapper-mobile">
        {%
                include 'rimg-home'
        img: mobile-image,
                size: '2048x2048',
                lazy: true, %}
      </div>
      <div class="feature-row-item text-wrapper">
        <div class="text-inner">
          <h2 class="heading">{{ section.settings.heading }}</h2>
          <p class="text">{{ section.settings.content }}</p>
          <a href="{{ section.settings.button_url }}" class="btn">{{ section.settings.button_text }}</a>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Banner",
    "class": "home-our-mission",
    "settings": [
      {
        "type": "image_picker",
        "id": "desktop_image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile Image"
      },
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "content",
        "label": "content"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button Link"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      }
    ],
    "presets": [
      {
        "category": "Custom Blocks",
        "name": "Banner"
      }
    ]
  }
{% endschema %}