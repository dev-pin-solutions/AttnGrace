<style>
  #shopify-section-{{section.id}} .sustainability {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media only screen and (min-width: 990px) {
    #shopify-section-{{section.id}} .sustainability {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>
<section class="sustainability custom-container">
  {% if section.settings.heading != blank %}
    <h2 class="sustainability-title global-heading">{{ section.settings.heading | escape }}</h2>
  {% endif %}
  <div class="sustainability-blocks">
    {% for block in section.blocks %}
      <div class="sustainability-block">
        {% if block.settings.image != blank %}
          <div class="sustainability-block__image">
            <img src="{{ block.settings.image | img_url: '600x' }}" alt="{{ block.settings.image.alt }}">
          </div>
        {% endif %}
        {% if block.settings.text != blank %}
          <div class="sustainability-block__text">
            {{ block.settings.text }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
  {% if section.settings.link_url != blank %}
    <a href="{{ section.settings.link_url }}" class="sustainability-link global-btn">
      {{ section.settings.link_text }}
    </a>
  {% endif %}
</section>

{% schema %}
{
  "name": "Sustainability Section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Padding Top Mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Padding Bottom Mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    }
  ],
  "blocks": [
    {
      "name": "Column",
      "type": "column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Column Image"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Column Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sustainability Section"
    }
  ]
}

{% endschema %}