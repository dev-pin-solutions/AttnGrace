        background: transparent;
        padding: 10px;
        cursor: pointer;
        border: none;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        border-radius: 50%;
    }

    .carousel-prev {
        left: 10px;
    }

    .carousel-next {
        right: 10px;
    }

    .carousel-dots {
        display: flex;
        justify-content: center;
        margin-top: 10px;
        gap: 5px;
        margin-bottom: 20px;
    }

    .carousel-dots .dot {
        width: 10px;
        height: 10px;
        padding: 3px;
        border: 1px solid #4F4F4F;
        border-radius: 50%;
        cursor: pointer;
    }

    .carousel-dots .dot.active {
        background-color: #4F4F4F;
    }

    .carousel-hidden {
        display: none;
    }
    @media (max-width: 500px) {
